doctype html
html(lang="en")
    head
        title Weather Tracker
        link(rel="stylesheet", href="table.css")
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" ,integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ", crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-3.1.1.slim.min.js", integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" ,crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js",integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb", crossorigin="anonymous")
        script( src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" ,integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" ,crossorigin="anonymous")
    body
        div.jumbotron.jumbotron-fluid.text-center
            div.container
                h1 Weather Tracker
        div.container
            div.row
                div.col
                    table.table.table-responsive.table-striped.table-bordered
                        thead.thead-dark
                            tr
                                th Name
                                th Latitude
                                th Longitude
                                th Current Temperature
                                th 24h Temperature High
                                th 24h Temperature Low
                        tbody
                            each result in results
                                tr
                                    td #{result.name}
                                    td #{result.latitude}
                                    td #{result.longitude}
                                    td #{result.currentTemp}
                                    td #{result.highTemp}
                                    td #{result.lowTemp}
                div.col
                    form(action="/update", method="POST")
                        p Observation point
                        select(name="city")
                            option Tokyo
                            option Helsinki
                            option New York
                            option Amsterdam
                            option Dubai
                        p Current temp:
                        input(type="number", name="currentTemp", required)
                        br
                        p 24h Highest Temp:
                        input(type="number", name="highestTemp", required)
                        br
                        p 24h Lowest Temp:
                        input(type="number", name="lowestTemp", required)
                        br
                        br
                        input(type="submit", value="Update")
                
        

